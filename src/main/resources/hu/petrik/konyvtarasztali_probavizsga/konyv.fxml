<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

<VBox minHeight="350.0" minWidth="800.0" prefHeight="350.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hu.petrik.konyvtarasztali_probavizsga.KonyvController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <Button fx:id="torlesButton" alignment="TOP_LEFT" mnemonicParsing="false" onAction="#deleteButtonClick" text="Törlés" />
        <TableView fx:id="bookTable" prefHeight="320.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="titleCol" prefWidth="285.0" text="Cím" />
                <TableColumn fx:id="authorCol" prefWidth="282.0" text="Szerző" />
                <TableColumn fx:id="pyearCol" prefWidth="79.0" text="Kiadás éve" />
                <TableColumn fx:id="pagesCol" prefWidth="90.0" text="Oldalszám" />
            </columns>
        </TableView>
    </children>
</VBox>
